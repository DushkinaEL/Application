<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Application" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Application" parent="Base.Theme.Application" />

    <style name="MyTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#134A45</item>
        <item name="colorPrimaryDark">#55043E0D</item>
        <item name="colorAccent">#7AE68F8F</item>
        <item name="colorOnBackground">#D00E031C</item>
    </style>

    <style name="MyTheme.NewButton" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
    </style>
    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">13dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="backgroundTint">#C2A9EF</item>
    </style>
    <style name="TextShadow" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:shadowDy">5</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>
</resources>